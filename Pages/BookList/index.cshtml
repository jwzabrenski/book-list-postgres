@page
@model IndexModel
@{

}
<br />
<h2>Book List</h2>
<br />

@if(Model.Message != null)
{
    <div class="alert alert-info alert-dismissable" rolse="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

<a asp-page="Create" class="btn btn-primary">Create New Book</a>
<form method="post">
@if(Model.Books.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Books.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Books.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Books.FirstOrDefault().Name)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var book in Model.Books)
        {
            <tr>
                <td>
                    @Html.DisplayFor(x => book.Name)
                </td>
                <td>
                    @Html.DisplayFor(x => book.Author)
                </td>
                <td>
                    @Html.DisplayFor(x => book.ISBN)
                </td>
                <td>
                    <button asp-page-handler="delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Delete</button>
                    <a asp-page="Edit" asp-route-id="@book.Id" class="btn btn-success btn-sm">Edit</a>
                </td>
                <td></td>
            </tr>
        }
    </table>
}
else
{
    <div>No Books Available</div>
}
</form>